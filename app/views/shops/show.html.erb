
<div class="main-content">

  <%= @info.name %>
    <p></p>

  <%= image_tag(@info.image_url, :size => "300x300") %>

  <div class="inputtext">
    <%= form_for [@info, @review] do |f| %>
      <%= f.text_field :text %>
      <%= f.submit '投稿' %>
    <% end %>
  </div>

  <ul>
  <% @reviews.each do |review| %>
    <li>
      <%= review.text %>
    </li>
  <% end %>
  </ul>

</div>

